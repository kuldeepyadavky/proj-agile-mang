<div class='project_show'>
<div class='card'>


<div class='card-body'>
<div class='card-title'>
  <%= @project.title %>
</div>
<div class='card-text'>
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<span class="badge alert-info">
  <%= @project.status %>
</span>

<p>
  <strong>Due date:</strong>
  <%= @project.due_date %>
</p>
</div>
</div>
<div class='card-footer'>

<%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-primary' %> 
<%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%>
</div>
</div>


<hr/>


<h3>Tasks</h3>
<% if @project.tasks.count != 0 %>
<div class='card_container container'>
<% @project.tasks.each do |task| %>
<% if task.persisted? %>
  <div class='col-xl-2 col-md-4'>
    <p><%= task.title %></p>
    <p><%= link_to 'View >', [task.project, task] %></p>
  </div>
<% end%>
<% end %>
</div>
<% else %>
<p class='nothing-here'>No Tasks Yet!</p>
<% end %>


<hr/>

<div class='custom-form'>
<%= form_for([@task.project, @task])  do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h3>Add Task</h3>
  <div class="field">
    <%= f.label :title , class:'form-label' %><br />
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description ,class:'form-label' %><br />
    <%= f.text_area :description , class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :due_date ,class:'form-label' %><br />
    <%= f.date_select :due_date , class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :end_date, class:'form-label'  %><br />
    <%= f.date_select :end_date , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :start_date, class:'form-label' %><br />
    <%= f.date_select :start_date, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :story_point, class:'form-label' %><br />
    <%= f.number_field :story_point, step: 0.000000000000000001 , class: 'form-control'%>
  </div>
    <div class="field">
    <%= f.label :priority, class:'form-label' %><br />
    <%= f.select :priority , options_for_select(["Low", "Medium", "High", "Urgent"]) , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :status, class:'form-label' %><br />
    <%= f.select :status, options_for_select(["In Progress", "On Hold","Completed"]) , class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :phase_id, class:'form-label' %><br />
    <%= f.collection_select :phase_id, Phase.all, :id, :title , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :task_type, class:'form-label' %><br />
    <%= f.text_field :task_type , class: 'form-control'%>
  </div>
  <div class="field">
  <%= f.label :attached_files, class:'form-label' %>
  <%= f.file_field :attached_files, multiple: true, class: 'form-control' %>
  </div>
 <div class="field">
    <%= f.number_field :project_id,id:  :task_project_id, value: @project.id, type: :hidden%>
  </div>
   <div class="field">
    <%= f.number_field :user_id, id: :task_user_id,  value: current_user.id, type: :hidden %>
  </div>
  <div class="actions">
    <%= f.submit "Add Task", class: 'btn btn-outline-success login_signup'%>
  </div>
<% end %>
</div>
</div>